{

  "description": "ipfs daemon test thing",
  "manifest_version": 2,
  "name": "ipfs IN DA BROWSER",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "applications": {
    "gecko": {
      "id": "ipfs@example.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/ipfs-logo-vector-ice.svg"
  },
 
  "permissions": [
    "nativeMessaging",
    "webRequest",
    "webRequestBlocking",
    "downloads"
  ]

}
